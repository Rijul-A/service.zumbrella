<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.zumbrella" name="zUmbrella Service" version="0.0.3-matrix" provider-name="Rijul">
	<requires>
		<import addon="xbmc.python" version="3.0.0"/>
		<import addon="script.module.six" version="1.14.0+matrix.2" />
		<import addon="script.module.kodi-six" version="0.1.3+1" />
	</requires>
	<extension point="xbmc.python.script" library="gui.py">
		<provides>executable</provides>
	</extension>
  <extension point="xbmc.service" library="main_service.py" start="login"/>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Bluetooth inactivity timer, sleep timer, and UpNext all in one</summary>
		<description lang="en_GB">(1) The sleep timer checks for inactivity and pauses media. (2) BT inactivity does the same and turns off your bluetooth controllers. (3) Up next is a copy of Netflix's NextUp feature</description>
		<language></language>
		<platform>all</platform>
	</extension>
</addon>
